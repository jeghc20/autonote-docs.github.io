{% assign relative_url_base = ''
%}{% assign depth = page.url | split: '/' | size | minus: 1
%}{% if depth <= 1
%}{% assign relative_url_base = '.'
%}{% elsif depth == 2
%}{% assign relative_url_base = '..'
%}{% elsif depth == 3
%}{% assign relative_url_base = '../..'
%}{% elsif depth == 4
%}{% assign relative_url_base = '../../..'
%}{% endif
%}

{%- comment -%} From https://ricostacruz.com/til/relative-paths-in-jekyll {%- endcomment -%}